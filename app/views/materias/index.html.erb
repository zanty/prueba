<%- model_class = Materia -%>
<div class="page-header">
  <br>
  <br>
  <h1>Materias</h1>
</div>
<%= form_tag request.path, :method => 'get' do %>
 <%= content_tag :label do %>
   Nombre Horario:
   <%= text_field_tag :search,params[:search]%>
   <%= submit_tag "Consultar", :name => nil %>
 <% end %>
<% end %>
<table class="table table-striped table-bordered table-condensed pretty">
  <thead>
    <tr>
      <th><%= sortable "id" %></th>
      <th><%= sortable "nombre" %></th>
      <th><%= sortable "created_at" %></th>
      <th></th> 
    </tr>
  </thead>
  <tbody>
     <%= render @materias %>
  </tbody>
  <tfoot>
<div align="center"> 
    <%= will_paginate @materias, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %> 
</div>
    <tr>
      <td><%= link_to 'Nueva Materia', new_materia_path, :remote => true %></td>
    </tr>
  </tfoot>
</table>

<br>
<br>
<p>
  Total Materias : <%= @materias.total_entries %>
</p>
<hr>

 Seleccione numero de registros por pagina:
<br>
<form id="myform" method='GET' action='materias' >
 <select name='limit' onchange='actualizar();'>
   <option value = '2'></option>
   <option value = '2'>2</option>
   <option value = '4'>4</option>
   <option value = '6'>6</option>
 </select>
</form>