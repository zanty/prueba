
<%- model_class = Horario -%>
<div class="page-header">
  <br>
  <br>
  <h1>Horarios</h1>
</div>
<%= form_tag request.path, :method => 'get' do %>
 <%= content_tag :label do %>
   Nombre Horario:
   <%= text_field_tag :search,params[:search]%>
   <%= submit_tag "Consultar", :name => nil %>
 <% end %>
<% end %>
<table class="table table-striped table-bordered table-condensed pretty">
  <thead>
    <tr>
      <th><%= sortable "id" %></th> 
      <th><%= sortable"dia"%></th>
      <th><%= sortable"hora"%></th>
      <th><%= sortable"aula"%></th>
      <th><%= sortable"materia"%></th> 
      <th><%= sortable"instructor"%></th>
      <th><%= sortable"curso"%></th> 
      <th><%= sortable"created_at"%></th>
      
      
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @horarios %>
  </tbody>
  <tfoot>
     <div align="center"> 
       <%= will_paginate @horarios, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
       &raquo;' %> 
    </div>
    <tr>
      <td><%= link_to 'Nuevo Horario', new_horario_path, :remote => true %></td>
    </tr>
  </tfoot>
</table>

<br>
<br>
<p>
  Total Horarios : <%= @horarios.total_entries %>
</p>

<hr>

 Seleccione numero de registros por pagina:
<br>
<form id="myform" method='GET' action='horarios' >
 <select name='limit' onchange='actualizar();'>
   <option value = '2'></option>
   <option value = '2'>2</option>
   <option value = '4'>4</option>
   <option value = '6'>6</option>
 </select>
</form>
