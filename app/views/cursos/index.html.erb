<%- model_class = Curso -%>
<div class="page-header"> 
  <br>
  <br>
  <h1>Cursos</h1>
</div>
<%= form_tag request.path, :method => 'get' do %>
 <%= content_tag :label do %>
   Nombre Curso:
   <%= text_field_tag :search,params[:search]%>
   <%= submit_tag "Consultar", :name => nil %>
 <% end %>
<% end %>
<table class="table table-striped table-bordered table-condensed pretty">
  <thead>
    <tr>
      <th><%= sortable "id" %></th>
      <th><%= sortable "ficha" %></th>
      <th><%= sortable "nombre" %></th>
      <th><%= sortable "created_at"%></th>	 	  
      <th></th>
    </tr>
  </thead> 
  <tbody>
     <%= render @cursos %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'Nuevo Curso', new_curso_path, :remote => true %></td>
    </tr>
<div align="center"> 
    <%= will_paginate @cursos, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %> 
</div>
  </tfoot>
</table>

<br>
<br>
<p>
  Total Cursos : <%= @cursos.total_entries %>
</p>

<hr>

 Seleccione numero de registros por pagina:
<br>
<form id="myform" method='GET' action='cursos' >
 <select name='limit' onchange='actualizar();'>
   <option value = '2'></option>
   <option value = '2'>2</option>
   <option value = '4'>4</option>
   <option value = '6'>6</option>
 </select>
</form>
